---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Admonition from "../../components/mdx/Admonition.astro";
import Brief from "../../components/mdx/Brief.astro";
import NixStorePath from "../../components/mdx/NixStorePath.astro";
import ConceptPage from "../../layouts/ConceptPage.astro";

export const getStaticPaths = (async () => {
  const conceptPages = await getCollection("concepts");

  return conceptPages.map((page) => ({
    params: { slug: page.slug },
    props: page,
  }));
}) satisfies GetStaticPaths;

const page = Astro.props;
const { slug } = Astro.params;
const { data } = page;
const { title, snippet } = data;
const { Content } = await page.render();
---

<ConceptPage {title} {slug} description={snippet}>
  <Content components={{ Admonition, Brief, NixStorePath }} />
</ConceptPage>
